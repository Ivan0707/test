<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/title_bar_color_bg" 
    >
    
    <RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="25dip"
	    android:visibility="gone" >
        
        <TextView
            android:id="@+id/top_title_skin"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="10dip"
		    android:textColor="#ffffff"
		    android:textSize="18sp"
		    android:text="" />
        
        <TextView
            android:id="@+id/top_title_time"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="10dip"
		    android:textColor="#ffffff"
		    android:textSize="18sp"
		    android:text="" />
        
        <TextView
            android:id="@+id/top_title_battery"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="right"
		    android:layout_marginRight="10dip"
		    android:textColor="#ffffff"
		    android:textSize="18sp"
		    android:text="" />
    </RelativeLayout>

	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="45dp"
	    android:gravity="center"
	    android:textColor="#ffffff"
	    android:textStyle="bold"
	    android:textSize="22sp"
	    android:id="@+id/title"/>
	<!-- android:background="@drawable/topbar_headlines" -->
	
	<LinearLayout
	    android:id="@+id/layout_top_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical|center_horizontal"
	    android:gravity="center_vertical|center_horizontal"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    android:orientation="horizontal"
	    android:visibility="gone" >

	    <TextView
	        android:id="@+id/tv_day"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal|center_vertical"
	        android:text="@string/date_Day"
	        android:textColor="#000"
	        android:background="@drawable/top_day_off"
	        android:textSize="18dip" />

	    <TextView
	        android:id="@+id/tv_week"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="0dip"
	        android:gravity="center_horizontal|center_vertical"
	        android:text="@string/week"
	        android:textColor="#000"
	        android:background="@drawable/top_week_off"
	        android:textSize="18dip" />

	    <TextView
	        android:id="@+id/tv_months"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="0dip"
	        android:gravity="center_horizontal|center_vertical"
	        android:text="@string/months"
	        android:textColor="#000"
	        android:background="@drawable/top_months_off"
	        android:textSize="18dip" />
	</LinearLayout>
</LinearLayout>
